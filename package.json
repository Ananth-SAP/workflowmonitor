{
  "name": "workflow",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^4.0.2",
    "@sap-cloud-sdk/resilience": "^4.0.2",
    "@sap/cds": "^8",
    "express": "^4",
    "sort-array": "^5.0.0",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-workflowmonitor": "cds watch --open workflowmonitor/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy workflow --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "Workflow": {
        "kind": "rest",
        "credentials": {
          "destination": "sapbuildbrocessapi"
        }
      },
      "auth": "xsuaa",
      "html5-runtime": true,
      "destinations": true,
      "workzone": true
    }
  },
  "sapux": [
    "app/workflowmonitor"
  ]
}
